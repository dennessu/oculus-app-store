dropdb -e -h demo-instance.cjodfwztqut5.us-west-2.rds.amazonaws.com -U demo_user payment
createdb -e -h demo-instance.cjodfwztqut5.us-west-2.rds.amazonaws.com -U demo_user payment

dropdb -e -h demo-instance.cjodfwztqut5.us-west-2.rds.amazonaws.com -U demo_user subscription
createdb -e -h demo-instance.cjodfwztqut5.us-west-2.rds.amazonaws.com -U demo_user subscription