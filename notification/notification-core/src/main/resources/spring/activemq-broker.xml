<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
          http://activemq.apache.org/schema/core http://activemq.apache.org/schema/core/activemq-core.xsd">
    <broker xmlns="http://activemq.apache.org/schema/core" useJmx="false" schedulerSupport="true">
        <managementContext>
            <managementContext createConnector="false"/>
        </managementContext>

        <plugins>
            <simpleAuthenticationPlugin>
                <users>
                    <authenticationUser username="${notification.activemq.userName}" password="${notification.activemq.password}" groups="users,admins"/>
                </users>
            </simpleAuthenticationPlugin>
        </plugins>

        <transportConnectors>
            <transportConnector uri="${notification.activemq.brokerURL}"/>
        </transportConnectors>
    </broker>
</beans>