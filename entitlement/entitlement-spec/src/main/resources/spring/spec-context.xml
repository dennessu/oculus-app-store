<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="asyncHttpClient" class="com.ning.http.client.AsyncHttpClient"/>

    <bean id="entitlementClient" class="com.junbo.entitlement.spec.resource.proxy.EntitlementResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.entitlement.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
    </bean>
    <bean id="userEntitlementClient" class="com.junbo.entitlement.spec.resource.proxy.UserEntitlementResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.entitlement.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
    </bean>
</beans>