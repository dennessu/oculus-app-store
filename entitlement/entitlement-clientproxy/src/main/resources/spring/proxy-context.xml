<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.junbo.entitlement.clientproxy"/>

    <bean id="userFacade" class="com.junbo.entitlement.clientproxy.identity.impl.UserFacadeImpl"/>
    <bean id="catalogFacade" class="com.junbo.entitlement.clientproxy.catalog.impl.CatalogFacadeImpl"/>

    <!-- proxy -->
    <bean id="asyncHttpClient" class="com.ning.http.client.AsyncHttpClient" />

    <bean id="identityUserClient" class="com.junbo.identity.spec.resource.proxy.UserResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="http://localhost:8080/rest"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
    </bean>

    <bean id="catalogOfferClient" class="com.junbo.catalog.spec.resource.proxy.OfferResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="http://localhost:8080/rest"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
    </bean>

</beans>