<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:spring/routing-context.xml"/>

    <context:component-scan base-package="com.junbo.payment.rest.resource"/>
    <context:component-scan base-package="com.junbo.payment.spec.resource.adapter"/>

    <bean id="defaultPaymentInstrumentResource" class="com.junbo.payment.rest.resource.PaymentInstrumentResourceImpl" scope="prototype"/>
    <bean id="defaultPaymentTransactionResource" class="com.junbo.payment.rest.resource.PaymentTransactionResourceImpl" scope="prototype"/>
    <bean id="defaultBrainTreeResource" class="com.junbo.payment.rest.resource.BrainTreeResourceImpl" scope="prototype"/>
    <!--bean id="defaultPaymentInstrumentTypeResource" class="com.junbo.payment.rest.resource.PaymentInstrumentTypeResourceImpl" scope="prototype"/-->
    <bean id="defaultPaymentCallbackResource" class="com.junbo.payment.rest.resource.PaymentCallbackResourceImpl" scope="prototype"/>

    <bean id="defaultPaymentInstrumentResourceClientFactory" class="com.junbo.payment.spec.resource.proxy.PaymentInstrumentResourceClientProxyFactory"/>
    <bean id="defaultPaymentTransactionResourceClientFactory" class="com.junbo.payment.spec.resource.proxy.PaymentTransactionResourceClientProxyFactory"/>
    <bean id="defaultBrainTreeResourceClientFactory" class="com.junbo.payment.spec.internal.proxy.BrainTreeResourceClientProxyFactory"/>
    <!--bean id="defaultPaymentInstrumentTypeResourceClientFactory" class="com.junbo.payment.spec.resource.proxy.PaymentInstrumentTypeResourceClientProxyFactory"/-->
    <bean id="defaultPaymentCallbackResourceClientFactory" class="com.junbo.payment.spec.resource.proxy.PaymentCallbackResourceClientProxyFactory"/>

    <bean id="defaultPaymentInstrumentResourceRouter" parent="routingRouterBase" />
    <bean id="defaultPaymentTransactionResourceRouter" parent="routingRouterBase" />
    <bean id="defaultBrainTreeResourceRouter" parent="routingRouterBase" />
    <!--alias alias="defaultPaymentInstrumentTypeResourceRouter" name="routingRouter" /-->
    <bean id="defaultPaymentCallbackResourceRouter" parent="routingRouterBase" />

</beans>