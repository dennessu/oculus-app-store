<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="asyncHttpClient" class="com.ning.http.client.AsyncHttpClient"/>

    <bean id="transcoder" class="com.junbo.common.json.JsonMessageTranscoder"/>
    <bean id="pathParamTranscoder" class="com.junbo.common.json.IdPathParamTranscoder" />
    <bean id="queryParamTranscoder" class="com.junbo.common.json.QueryParamTranscoderImpl" />

    <bean id="brainTreeClient" class="com.junbo.payment.spec.internal.proxy.BrainTreeResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="{payment.braintree.url}"/>
        <constructor-arg name="transcoder" ref="transcoder"/>
        <constructor-arg name="pathParamTranscoder" ref="pathParamTranscoder"/>
        <constructor-arg name="queryParamTranscoder" ref="queryParamTranscoder" />
    </bean>

</beans>