<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.junbo.oom.core.builtin"/>
    <context:component-scan base-package="com.junbo.payment.db"/>
    <context:annotation-config />

    <!--Data source has the database information -->
        <bean id="dataSource" class="com.jolbox.bonecp.BoneCPDataSource" destroy-method="close">
            <property name="driverClass" value="${payment.db.driverClassName}"/>
            <property name="jdbcUrl" value="${payment.db.url}"/>
            <property name="username" value="${payment.db.username}"/>
            <property name="password" value="${payment.db.password}"/>
            <property name="maxConnectionsPerPartition" value="${payment.db.maxConnectionsPerPartition}"/>
            <property name="minConnectionsPerPartition" value="${payment.db.minConnectionsPerPartition}"/>
            <property name="partitionCount" value="${payment.db.partitionCount}"/>
            <property name="acquireIncrement" value="${payment.db.acquireIncrement}"/>
            <property name="statementsCacheSize" value="${payment.db.statementsCacheSize}"/>
            <property name="releaseHelperThreads" value="${payment.db.releaseHelperThreads}"/>
        </bean>
     <!--
        <bean id="dataSource"
              class="org.springframework.jdbc.datasource.DriverManagerDataSource">
            <property name="driverClassName" value="org.postgresql.Driver"/>
            <property name="url" value="jdbc:postgresql://localhost:5432/payment"/>
            <property name="username" value="postgres"/>
            <property name="password" value="#Bugsfor$"/>
        </bean>
    -->
    <!-- SessonFactory for Hibernate -->
    <bean id="sessionFactory"
          class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${payment.hibernate.dialect}</prop>
                <prop key="hibernate.max_fetch_depth">${payment.hibernate.max_fetch_depth}</prop>
                <prop key="hibernate.jdbc.fetch_size">${payment.hibernate.jdbc.fetch_size}</prop>
                <prop key="hibernate.jdbc.batch_size">${payment.hibernate.jdbc.batch_size}</prop>
                <prop key="hibernate.show_sql">${payment.hibernate.show_sql}</prop>
            </props>
        </property>
        <property name="packagesToScan">
            <list>
                <value>com.junbo.payment.db</value>
                <value>com.junbo.payment.db.dao.payment</value>
                <value>com.junbo.payment.db.entity.payment</value>
                <value>com.junbo.payment.db.dao.paymentinstrument</value>
                <value>com.junbo.payment.db.entity.paymentinstrument</value>
            </list>
        </property>
    </bean>
    <!-- Transaction Manager -->
    <bean id="transactionManager"
          class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <!-- Dao -->
    <bean id="genericDao"
          class="com.junbo.payment.db.dao.GenericDAOImpl" abstract="true">
    </bean>

    <bean id="addressDao"
          class="com.junbo.payment.db.dao.paymentinstrument.AddressDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.paymentinstrument.AddressEntity"/>
    </bean>

    <bean id="phoneDao"
          class="com.junbo.payment.db.dao.paymentinstrument.PhoneDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.paymentinstrument.PhoneEntity"/>
    </bean>

    <bean id="PaymentInstrumentDao"
          class="com.junbo.payment.db.dao.paymentinstrument.PaymentInstrumentDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.paymentinstrument.PaymentInstrumentEntity"/>
    </bean>

    <bean id="ccPaymentInstrumentDao"
          class="com.junbo.payment.db.dao.paymentinstrument.CreditCardPaymentInstrumentDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.paymentinstrument.CreditCardPaymentInstrumentEntity"/>
    </bean>

    <bean id="paymentDao"
          class="com.junbo.payment.db.dao.payment.PaymentDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.payment.PaymentEntity"/>
    </bean>

    <bean id="paymentEventDao"
          class="com.junbo.payment.db.dao.payment.PaymentEventDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.payment.PaymentEventEntity"/>
    </bean>

    <bean id="merchantAccountDao"
          class="com.junbo.payment.db.dao.payment.MerchantAccountDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.payment.MerchantAccountEntity"/>
    </bean>

    <bean id="paymentProviderDao"
          class="com.junbo.payment.db.dao.payment.PaymentProviderDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.payment.PaymentProviderEntity"/>
    </bean>

    <bean id="currencyTypeDao"
          class="com.junbo.payment.db.dao.CurrencyTypeDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.CurrencyTypeEntity"/>
    </bean>

    <bean id="countryTypeDao"
          class="com.junbo.payment.db.dao.CountryTypeDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.CountryTypeEntity"/>
    </bean>

    <bean id="trackingUuidDao"
          class="com.junbo.payment.db.dao.TrackingUuidDao" parent="genericDao">
        <property name="persistentClass" value="com.junbo.payment.db.entity.TrackingUuidEntity"/>
    </bean>

    <bean id="paymentInstrumentRepository" class="com.junbo.payment.db.repository.PaymentInstrumentRepository"></bean>

    <bean id="paymentRepository" class="com.junbo.payment.db.repository.PaymentRepository"></bean>

    <bean id="trackingUuidRepository" class="com.junbo.payment.db.repository.TrackingUuidRepository" ></bean>

    <bean id="domainDataRepository"
          class="com.junbo.payment.db.repository.DomainDataRepository" abstract="true">
    </bean>

    <bean id="merchantAccountRepository"
          class="com.junbo.payment.db.repository.MerchantAccountRepository" parent="domainDataRepository">
        <property name="dao" ref="merchantAccountDao"/>
    </bean>

    <bean id="paymentProviderRepository"
          class="com.junbo.payment.db.repository.PaymentProviderRepository" parent="domainDataRepository">
        <property name="dao" ref="paymentProviderDao"/>
    </bean>

    <bean id="countryTypeRepository"
          class="com.junbo.payment.db.repository.CountryTypeRepository" parent="domainDataRepository">
        <property name="dao" ref="countryTypeDao"/>
    </bean>

    <bean id="currencyTypeRepository"
          class="com.junbo.payment.db.repository.CurrencyTypeRepository" parent="domainDataRepository">
        <property name="dao" ref="currencyTypeDao"/>
    </bean>

    <bean class="com.junbo.payment.db.mapper.CommonMapper" />
    <bean id="paymentMapperImpl" class="com.junbo.payment.db.mapper.PaymentMapperImpl" />
    <bean id="paymentMapperExtension" class="com.junbo.payment.db.mapper.PaymentMapperExtension" />
</beans>