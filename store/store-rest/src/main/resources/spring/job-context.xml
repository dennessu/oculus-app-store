<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Order Scheduler -->
    <bean id="storeSchedulerFactoryBean" class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
          parent="baseJobScheduler">
        <property name="schedulerName" value="storeScheduler" />
        <property name="triggers">
            <list>
                <ref bean="sectionRefreshJobTrigger"/>
            </list>
        </property>
    </bean>

    <bean id="sectionRefreshJobTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean" >
        <property name="jobDetail" ref="sectionRefreshJobDetail" />
        <property name="cronExpression" value="${store.browse.section.refresh.cron}" />
    </bean>

    <bean id="sectionRefreshJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject">
            <bean class="com.junbo.apphost.core.LazyInitProxyFactoryBean">
                <property name="targetBeanName">
                    <idref bean="storeSectionService"/>
                </property>
            </bean>
        </property>
        <property name="targetMethod" value="refreshSectionInfoNode" />
        <property name="concurrent" value="false"/>
    </bean>

</beans>
