<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- fusion -->
    <bean id="catalogGateway" class="com.junbo.fulfilment.clientproxy.impl.CatalogGatewayImpl"/>
    <bean id="entitlementGateway" class="com.junbo.fulfilment.clientproxy.impl.EntitlementGatewayImpl"/>
    <bean id="walletGateway" class="com.junbo.fulfilment.clientproxy.impl.WalletGatewayImpl"/>
    <bean id="billingGateway" class="com.junbo.fulfilment.clientproxy.impl.BillingGatewayImpl"/>

    <!-- async http client -->
    <bean id="asyncHttpClient" class="com.ning.http.client.AsyncHttpClient"/>

    <bean id="entitlementClient" class="com.junbo.entitlement.spec.resource.proxy.EntitlementResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.entitlement.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="offerClient" class="com.junbo.catalog.spec.resource.proxy.OfferResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.catalog.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="offerRevisionClient" class="com.junbo.catalog.spec.resource.proxy.OfferRevisionResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.catalog.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="itemClient" class="com.junbo.catalog.spec.resource.proxy.ItemResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="${clientproxy.catalog.url}"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
