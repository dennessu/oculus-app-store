<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath*:spring/clientproxy-context.xml"/>
    <import resource="classpath*:spring/transaction.xml"/>
    <import resource="classpath*:spring/sharding-context.xml"/>

    <bean id="megaGatway" class="com.junbo.fulfilment.clientproxy.impl.MegaGatewayImpl"/>

    <bean id="fulfilmentClient" class="com.junbo.fulfilment.spec.resource.proxy.FulfilmentResourceClientProxy">
        <constructor-arg name="client" ref="asyncHttpClient"/>
        <constructor-arg name="target" value="http://localhost:8090/v1"/>
        <constructor-arg name="transcoder">
            <bean class="com.junbo.common.json.JsonMessageTranscoder"/>
        </constructor-arg>
        <constructor-arg name="pathParamTranscoder">
            <bean class="com.junbo.common.json.IdPathParamTranscoder"/>
        </constructor-arg>
        <constructor-arg name="queryParamTranscoder">
            <bean class="com.junbo.common.json.QueryParamTranscoderImpl"/>
        </constructor-arg>
    </bean>
</beans>