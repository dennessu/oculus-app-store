    <bean id="defaultUserSecurityQuestionResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserSecurityQuestionResourceClientProxyFactory"/>
    <bean id="defaultUserSecurityQuestionVerifyAttemptResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserSecurityQuestionVerifyAttemptResourceClientProxyFactory"/>
    <bean id="defaultUserTosAgreementResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserTosAgreementResourceClientProxyFactory"/>
    <bean id="defaultCountryResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.CountryResourceClientProxyFactory"/>
    <bean id="defaultCurrencyResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.CurrencyResourceClientProxyFactory"/>
    <bean id="defaultLocaleResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.LocaleResourceClientProxyFactory"/>
    <bean id="defaultPITypeResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.PITypeResourceClientProxyFactory"/>
    <bean id="defaultDeviceTypeResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.DeviceTypeResourceClientProxyFactory"/>
    <bean id="defaultCommunicationResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.CommunicationResourceClientProxyFactory"/>
    <bean id="defaultUserTeleResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserTeleResourceClientProxyFactory"/>
    <bean id="defaultUserTeleAttemptResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserTeleAttemptResourceClientProxyFactory"/>
    <bean id="defaultUserTeleBackupCodeResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserTeleBackupCodeResourceClientProxyFactory"/>
    <bean id="defaultUserTeleBackupCodeAttemptResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.UserTeleBackupCodeAttemptResourceClientProxyFactory"/>
    <bean id="defaultRoleResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.RoleResourceClientProxyFactory"/>
    <bean id="defaultRoleAssignmentResourceClientFactory" class="com.junbo.identity.spec.v1.resource.proxy.RoleAssignmentResourceClientProxyFactory"/>

    <alias alias="defaultAuthenticatorResourceRouter" name="commonRouter" />
    <alias alias="defaultUserCommunicationResourceRouter" name="commonRouter" />
    <alias alias="defaultUserCredentialResourceRouter" name="commonRouter" />
    <alias alias="defaultUserCredentialVerifyAttemptResourceRouter" name="commonRouter" />
    <alias alias="defaultGroupResourceRouter" name="commonRouter" />
    <alias alias="defaultUserResourceRouter" name="commonRouter" />
    <alias alias="defaultUserPersonalInfoResourceRouter" name="commonRouter" />
    <alias alias="defaultSecurityQuestionResourceRouter" name="commonRouter" />
    <alias alias="defaultDeviceResourceRouter" name="commonRouter" />
    <alias alias="defaultTosResourceRouter" name="commonRouter" />
    <alias alias="defaultUserGroupMembershipResourceRouter" name="commonRouter" />
    <alias alias="defaultUserSecurityQuestionResourceRouter" name="commonRouter" />
    <alias alias="defaultUserSecurityQuestionVerifyAttemptResourceRouter" name="commonRouter" />
    <alias alias="defaultUserTosAgreementResourceRouter" name="commonRouter" />
    <alias alias="defaultCountryResourceRouter" name="commonRouter" />
    <alias alias="defaultCurrencyResourceRouter" name="commonRouter" />
    <alias alias="defaultLocaleResourceRouter" name="commonRouter" />
    <alias alias="defaultPITypeResourceRouter" name="commonRouter" />
    <alias alias="defaultDeviceTypeResourceRouter" name="commonRouter" />
    <alias alias="defaultCommunicationResourceRouter" name="commonRouter" />
    <alias alias="defaultUserTeleResourceRouter" name="commonRouter" />
    <alias alias="defaultUserTeleAttemptResourceRouter" name="commonRouter" />
    <alias alias="defaultUserTeleBackupCodeResourceRouter" name="commonRouter" />
