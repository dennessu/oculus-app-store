        <property name="idGenerator" ref="oculus48IdGenerator"/>
    </bean>

    <bean id="cloudantGroupRepository" class="com.junbo.identity.data.repository.impl.cloudant.GroupRepositoryCloudantImpl" parent="cloudantClient">
