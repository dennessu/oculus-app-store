<?xml version="1.0" encoding="UTF-8"?>

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true" name="identityCacheManager">

<diskStore path="java.io.tmpdir"/>

    <cache name="IDENTITY_LOCALE"
           maxElementsInMemory="5000"
           maxElementsOnDisk="0"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU"
           eternal="false"
           timeToLiveSeconds="1800"
           timeToIdleSeconds="180"/>

    <cache name="IDENTITY_CURRENCY"
           maxElementsInMemory="5000"
           maxElementsOnDisk="0"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU"
           eternal="false"
           timeToLiveSeconds="1800"
           timeToIdleSeconds="180"/>

    <cache name="IDENTITY_COUNTRY"
           maxElementsInMemory="5000"
           maxElementsOnDisk="0"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU"
           eternal="false"
           timeToLiveSeconds="1800"
           timeToIdleSeconds="180"/>

    <cache name="IDENTITY_PI_TYPE"
           maxElementsInMemory="5000"
           maxElementsOnDisk="0"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU"
           eternal="false"
           timeToLiveSeconds="1800"
           timeToIdleSeconds="180"/>

</ehcache>
