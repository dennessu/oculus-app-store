        <value>fr_BF</value>
        <value>fr_BL</value>
        <value>fr_CA</value>
        <value>fr_CF</value>
        <value>fr_DJ</value>
        <value>fr_FR</value>
        <value>fr_GG</value>
        <value>fr_GQ</value>
        <value>fr_HT</value>
        <value>fr_JE</value>
        <value>fr_KM</value>
        <value>fr_LU</value>
        <value>fr_MC</value>
        <value>fr_MF</value>
        <value>fr_ML</value>
        <value>fr_NC</value>
        <value>fr_NE</value>
        <value>fr_PF</value>
        <value>fr_PM</value>
        <value>fr_SC</value>
        <value>fr_TD</value>
        <value>fr_TF</value>
        <value>fr_WF</value>
        <value>fr_YT</value>
    </util:list>

    <util:list id="de_DE_list">
        <value>de_AT</value>
        <value>de_BE</value>
        <value>de_CH</value>
        <value>de_DE</value>
        <value>de_LI</value>
        <value>de_LU</value>
    </util:list>

    <util:list id="es_ES_list">
        <value>es_ES</value>
        <value>es_GQ</value>
        <value>es_EH</value>
    </util:list>

    <util:list id="es_LA_list">
        <value>es_AR</value>
        <value>es_BO</value>
        <value>es_CL</value>
        <value>es_CO</value>
        <value>es_CR</value>
        <value>es_CU</value>
        <value>es_DO</value>
        <value>es_EC</value>
        <value>es_GT</value>
        <value>es_HN</value>
        <value>es_MX</value>
        <value>es_NI</value>
