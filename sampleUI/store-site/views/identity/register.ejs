<form class="box1 register">
    <h2>Create an Store Account</h2>
    <p>I already have an account,&nbsp;{{#link-to-animated "login" animations="main:flip"}}Login{{/link-to-animated}}</p>
    <dl>
        <dt>Username</dt>
        <dd>{{input type="text" class="{required:true,maxlength:20}" name="Username" id="Username" value=content.username}}</dd>
    </dl>
    <dl>
        <dt>Email Address</dt>
        <dd>{{input type="email" class="{required:true,email:true}" name="Email" id="Email" value=content.email}}</dd>
    </dl>
    <dl>
        <dt>Password</dt>
        <dd>{{input type="password" class="{required:true,maxlength:20}" name="Password" id="Password" value=content.password}}</dd>
    </dl>
    <dl>
        <dt>Re-type Password</dt>
        <dd>{{input type="password" class="{required:true,equalTo:'#Password'}" id="ConfirmPassword"}}</dd>
    </dl>
    <dl>
        <dt>Phone Number</dt>
        <dd>{{input type="text" class="{required:true,maxlength:20}" name="Phone" id="Phone" value=content.phone}}</dd>
    </dl>
    <dl>
        <dt>Enter Birth Date</dt>
        <dd>
            {{view Ember.Select content=months optionValuePath="content.v" optionLabelPath="content.t" value=month id="RMonth" name="Month" class="month {required:true, VerifyNumberValue:true}"}}
            {{view Ember.Select content=days optionValuePath="content.v" optionLabelPath="content.t" value=day id="RDay" name="Day" class="day {required:true, VerifyNumberValue:true}"}}
            {{view Ember.Select content=years optionValuePath="content.v" optionLabelPath="content.t" value=year id="RYear" name="Year" class="year {required:true, VerifyNumberValue:true}"}}
        </dd>
    </dl>
    <dl>
        <dt>Country of Residence</dt>
        <dd>{{view Ember.Select content=countries optionValuePath="content.v" optionLabelPath="content.t" value=country id="Country" name="Country" class="{required:true}"}}</dd>
    </dl>
    <dl class="agreement">
        <dd><label><input type="checkbox"><span>I have read and agree to Store Terms of Service and Privacy Policy.</span></label></dd>
        <dd><label><input type="checkbox"><span>I would like to receive totally sweet promotions, news, and offers form Store.</span></label></dd>
    </dl>
    <div class="actions">
        <button type="submit" class="btn btn-primary">Continue</button>
        <button type="button" class="btn btn-cancel">Cancel</button>
    </div>
</form>