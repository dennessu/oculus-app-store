<section class="box1">
    <h2>Please provide shipping information!</h2>

    <dl>
        <dt>Name</dt>
        <dd><input type="text"></dd>
    </dl>
    <dl>
        <dt>Street Address</dt>
        <dd><input type="text"></dd>
    </dl>
    <dl>
        <dt>City</dt>
        <dd><input type="text"></dd>
    </dl>
    <dl>
        <dt>Zip Code</dt>
        <dd><input type="text"></dd>
    </dl>
