<div class="container">


<div class="product_list">
    <h3>Product List</h3>

    {{#each}}
    <dl>
        <dd class="img">{{#link-to-animated "detail" id animations="main:slideOverLeft"}}<img {{bind-attr src="picture"}} />{{/link-to-animated}}</dd>
        <dt>{{#link-to-animated "detail" id animations="main:slideOverLeft"}}{{name}}{{/link-to-animated}}</dt>
        <dd>$ {{price}}</dd>
    </dl>
    {{/each}}
    <div class="clear"></div>
</div>
</div>