<div class="container order_summary">
    <h2>Order Summary</h2>

    <div class="order">

        <div class="list">
            {{#each content.products itemController="OrderSummaryItem"}}
            <dl class="item">
                <dt>{{product.name}}</dt>
                <dd>$ {{price}}</dd>
                <dd class="qty">{{qty}}</dd>
                <dd>$ {{subTotal}}</dd>
            </dl>

            <div class="line1"></div>
            {{/each}}
        </div>

        <div class="total">

            <div class="money">
                <dl>
                    <dt>Subtotal:</dt>
                    <dd>$ {{subTotal}}</dd>
                </dl>
                <dl>
                    <dt>Discount:</dt>
                    <dd>$ {{content.discount}}</dd>
                </dl>
                <dl>
                    <dt>Shipping:</dt>
                    <dd>$ {{content.shippingFee}}</dd>
                </dl>
                <dl>
                    <dt>Shipping Discount:</dt>
                    <dd>$ {{content.shippingFeeDiscount}}</dd>
                </dl>
                <dl>
                    <dt>Tax:</dt>
                    <dd>$ {{content.tax}}</dd>
                </dl>
                <dl class="total">
                    <dt>Order Total:</dt>
                    <dd>$ {{total}}</dd>
                </dl>
            </div>
            <div class="clear"></div>
        </div>

        <div class="info">
            <dl>
                <dt>Payment Method:</dt>
                <dd>{{content.paymentMethodName}}</dd>
            </dl>
            <dl>
                <dt>Shipping Method:</dt>
                <dd>{{content.shippingMethodName}}</dd>
            </dl>
            <dl class="billing_address">
                <dt>Shipping Address:</dt>
                <dd>
                    {{content.shippingAddress.firstName}} {{content.shippingAddress.lastName}}<br>
                    {{content.shippingAddress.street}}<br>
                    {{content.shippingAddress.city}}, {{content.shippingAddress.state}} {{content.shippingAddress.postalCode}}<br>
                    {{content.shippingAddress.phoneNumber}}
                </dd>
            </dl>
        </div>

        <div class="actions">
            <button id="BtnPurchase" type="button" class="btn btn-orange" {{action "Purchase"}}>Purchase Now</button>
        </div>
    </div>
</div>