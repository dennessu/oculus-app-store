<div class="container account">
    <%- include sidebar%>

    <div class="content">
        <section class="box1 settings">
            <h2>Profile Setting</h2>

            <dl>
                <dt>About Me</dt>
                <dd><textarea cols="32" rows="5"></textarea></dd>
            </dl>

            <div class="line1"></div>
            <h3>Social Media</h3>
            <dl>
                <dt>Twitter</dt>
                <dd><input type="text"></dd>
            </dl>
            <dl>
                <dt>Facebook</dt>
                <dd><input type="text"></dd>
            </dl>
            <div class="actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <button type="button" class="btn btn-cancel">Cancel</button>
            </div>
        </section>
    </div>
    <div class="clear"></div>
</div>