<div class="content">
    <div class="box2 payment">
        <h2>Payment Profiles</h2>
        <p><button type="button" class="btn btn-large btn-primary" {{action "AddPayment"}}>Add Payment Method</button></p>

        <div class="list">
            {{#each payments itemController="AccountPaymentItem"}}
            <dl>
                <dd><label>{{creditCardRequest.creditCardType}}</label></dd>
                <dd class="number">{{cardDisplay}}</dd>
                <dd class="exp">Exp {{expDisplay}}</dd>
                <dd><a href="#" class="btn btn-small btn-primary" {{action "DisplayDelDialog"}}>Delete</a></dd>
            </dl>
            {{/each}}
        </div>

        <div id="DelPaymentDialog" class="alert">
            <input id="SelectedPaymentId" type="hidden" value="">
            <h3>Delete Payment Profile</h3>
            <p>Are you sure you want to delete this payment profile from your account?</p>
            {{#if errMessage}}
                <p class="error">{{errMessage}}</p>
            {{/if}}
            <div>
                <button class="btn btn-cancel" {{action DelDialogNo}}>No</button>
                <button class="btn btn-primary" {{action DelDialogYes}}>Yes</button>
            </div>
        </div>
    </div>

</div>
<div class="clear"></div>