<div class="content">
    <div class="box2 shipping">
        <h2>Shipping Profiles</h2>
        <p><button type="button" class="btn btn-large btn-primary" {{action "AddShipping"}}>Add Shipping Info</button></p>

        <div class="list">
            {{#each shippings itemController="AccountShippingItem"}}
            <dl>
                <dt>
                    {{firstName}} {{lastName}}<br>
                    {{street}}<br>
                    {{city}}, {{state}} {{postalCode}}<br>
                    {{phoneNumber}}
                </dt>
                <dd><a href="#" class="btn btn-small btn-primary" {{action "DisplayDelDialog"}}>Delete</a></dd>
            </dl>
            {{/each}}
        </div>

        <div id="DelDialog" class="alert">
            <input id="SelectedId" type="hidden" value="">
            <h3>Delete Shipping Profile</h3>
            <p>Are you sure you want to delete this shipping profile from your account?</p>
            {{#if errMessage}}
                <p class="error">{{errMessage}}</p>
            {{/if}}
            <div>
                <button class="btn btn-cancel" {{action DelDialogNo}}>No</button>
                <button class="btn btn-primary" {{action DelDialogYes}}>Yes</button>
            </div>
        </div>
    </div>

</div>
<div class="clear"></div>