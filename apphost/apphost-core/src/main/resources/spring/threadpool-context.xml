<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="junboThreadPool" class="com.junbo.apphost.core.JunboThreadPoolFactoryBean">
        <property name="maxPoolSize" value="${apphost.threadPool.maxPoolSize}"/>
        <property name="queueLimit" value="${apphost.threadPool.queueLimit}"/>
        <property name="keepAliveTimeMillis" value="${apphost.threadPool.keepAliveTimeMillis}"/>
    </bean>
</beans>