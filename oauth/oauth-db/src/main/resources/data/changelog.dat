   "authorizePolicies": {
       "identity": {
           "claims": {
               "owner": [
                   "owner",
                   "read"
               ],
               "guest": [
                   "read"
               ],
               "admin": [
                   "admin",
                   "read"
               ]
           }
       }
   }
}

