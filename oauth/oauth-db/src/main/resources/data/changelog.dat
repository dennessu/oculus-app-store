client	client	{
    "client_name": "client",
    "redirect_uris": [
        "http://*",
        "http://localhost/login"
    ],
    "default_redirect_uri": "http://localhost/login",
    "scopes": [
        "identity",
        "openid",
        "offline",
        "scope.manage",
        "scope.info",
        "client.info",
        "consent.manage",
        "api.info",
        "api.manage"
    ],
    "default_scopes": [
        "identity",
        "openid"
    ],
    "response_types": [
        "ID_TOKEN",
        "CODE",
        "TOKEN"
    ],
    "grant_types": [
        "PASSWORD",
        "AUTHORIZATION_CODE",
        "REFRESH_TOKEN"
    ],
    "id_token_issuer": "www.junbo.com",
    "logout_redirect_uris": [
        "http://localhost"
    ],
    "default_logout_redirect_uri": "http://localhost",
    "client_secret": "secret",
    "need_consent": false
}

scope	identity	{
    "description": "Scope to get the identity information ok"
}

scope	openid	{
    "description": "Scope to represent the OpenID connect"
}

scope	offline	{
    "description": "Scope to allow offline access of the service. If offline scope is presented, a refresh token will be issued"
}

