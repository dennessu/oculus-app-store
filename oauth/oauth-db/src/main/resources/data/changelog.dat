client	client	{
    "client_name": "client",
    "redirect_uris": [
        "http://*",
        "http://localhost/login"
    ],
    "default_redirect_uri": "http://localhost/login",
    "scopes": [
        "identity",
        "commerce",
        "catalog",
        "developer",
        "openid",
        "offline",
        "scope.manage",
        "scope.info",
        "client.info",
        "consent.manage",
        "api.info",
        "api.manage"
    ],
    "default_scopes": [
        "identity",
        "openid"
    ],
    "response_types": [
        "ID_TOKEN",
        "CODE",
        "TOKEN"
    ],
    "grant_types": [
        "PASSWORD",
        "AUTHORIZATION_CODE",
        "REFRESH_TOKEN",
        "CLIENT_CREDENTIALS"
    ],
    "id_token_issuer": "www.junbo.com",
    "logout_redirect_uris": [
        "http://localhost",
        "http://localhost:8000/app/#/home"
    ],
    "default_logout_redirect_uri": "http://localhost",
    "client_secret": "secret",
    "need_consent": false
}

scope	identity	{
    "description": "Scope to get the identity information ok"
}

scope	openid	{
    "description": "Scope to represent the OpenID connect"
}

scope	offline	{
    "description": "Scope to allow offline access of the service. If offline scope is presented, a refresh token will be issued"
}

api	user_get	{
   "scopes": {
       "identity": [{
           "precondition": "owner",
           "rights": ["read"]
       }, {
           "precondition": "group('guest')",
           "rights": ["read"]
       }, {
           "precondition": "role('admin')",
           "rights": ["read"]
       }]
   }
}

api	item_get	{
   "scopes": {
       "catalog": [
           {
               "precondition": "owner",
               "rights": [
                   "read"
               ]
           },
           {
               "precondition": "group('guest')",
               "rights": [
                   "read"
               ]
           },
           {
               "precondition": "role('admin')",
               "rights": [
                   "read"
               ]
           }
       ]
   }
}

api	item_create	{
   "scopes": {
        "catalog.write": [
            {
                "precondition": "owner",
                "rights": [
                    "create"
                ]
            },
            {
                "precondition": "group('csr')",
                "rights": [
                    "create"
                ]
            }
        ]
   }
}
