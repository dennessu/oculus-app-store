<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:wf="http://www.junbo.com/schema/webflow"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.junbo.com/schema/webflow http://www.junbo.com/schema/webflow-config/webflow.xsd">

    <wf:flow id="FREE_SETTLE">
        <wf:action-state id="FREE_SETTLE_immediateSettle">
            <wf:action ref="validateUserAction"/>
            <wf:action ref="fulfillmentAction"/>
            <wf:action ref="freeSettleActionUpdateOrderAction"/>
            <wf:action ref="sendEmailAction"/>
        </wf:action-state>
    </wf:flow>

    <bean id="freeSettleActionUpdateOrderAction" class="com.junbo.order.core.impl.orderaction.SaveOrderAction">
        <property name="newOrder" value="false"/>
        <property name="updateOnlyOrder" value="true"/>
    </bean>
</beans>
