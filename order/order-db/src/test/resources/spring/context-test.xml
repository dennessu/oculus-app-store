<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:spring/db-context.xml"/>
    <import resource="classpath*:spring/common-context.xml"/>
    <import resource="classpath*:spring/transaction.xml"/>
    <import resource="classpath*:spring/sharding-context.xml"/>
    <import resource="classpath*:spring/dualwrite-context.xml"/>
    <import resource="classpath*:spring/common-lib-context.xml" />
    <import resource="classpath*:spring/threadpool-context.xml"/>

    <context:component-scan base-package="com.junbo.order.core"/>
    <context:component-scan base-package="com.junbo.order.db"/>

</beans>