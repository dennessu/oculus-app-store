<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:cache="http://www.springframework.org/schema/cache"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <context:component-scan base-package="com.junbo.order.clientproxy"/>

    <!-- Config service -->
    <bean id="configService" class="com.junbo.configuration.impl.ConfigServiceImpl" />
    <bean id="configPropertyPlaceholderConfigurer" class="com.junbo.configuration.impl.ConfigPropertyPlaceholderConfigurer" />
    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean class="com.junbo.configuration.reloadable.impl.ReloadableConfigConverterFactory" />
            </set>
        </property>
    </bean>

    <bean id="order.identityUserClient" class="com.junbo.identity.spec.v1.resource.proxy.UserResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.identity.url}"/>
    </bean>

    <bean id="order.identityUserPersonalInfoClient" class="com.junbo.identity.spec.v1.resource.proxy.UserPersonalInfoResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.identity.url}"/>
    </bean>

    <bean id="order.billingBalanceClient"
          class="com.junbo.billing.spec.resource.proxy.BalanceResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.billing.url}"/>
    </bean>

    <bean id="order.billingCurrencyClient" class="com.junbo.billing.spec.resource.proxy.BillingCurrencyResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.billing.url}"/>
    </bean>

    <bean id="order.ratingClient"
          class="com.junbo.rating.spec.resource.proxy.RatingResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.rating.url}"/>
    </bean>

    <bean id="order.offerClient" class="com.junbo.catalog.spec.resource.proxy.OfferResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.catalog.url}"/>
    </bean>

    <bean id="order.offerItemClient" class="com.junbo.catalog.spec.resource.proxy.ItemResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.catalog.url}"/>
    </bean>

    <bean id="order.offerRevisionClient" class="com.junbo.catalog.spec.resource.proxy.OfferRevisionResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.catalog.url}"/>
    </bean>

    <bean id="order.offerItemRevisionClient"
          class="com.junbo.catalog.spec.resource.proxy.ItemRevisionResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.catalog.url}"/>
    </bean>

    <bean id="order.fulfilmentClient"
          class="com.junbo.fulfilment.spec.resource.proxy.FulfilmentResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.fulfilment.url}"/>
    </bean>

    <bean id="order.paymentInstrumentClient"
          class="com.junbo.payment.spec.resource.proxy.PaymentInstrumentResourceClientProxy" parent="baseClientProxy">
        <property name="target" value="${clientproxy.payment.url}"/>
    </bean>

    <bean id="order.emailClient" class="com.junbo.email.spec.resource.proxy.EmailResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.email.url}"/>
    </bean>

    <bean id="order.emailTemplateClient" class="com.junbo.email.spec.resource.proxy.EmailTemplateResourceClientProxy"
          parent="baseClientProxy">
        <property name="target" value="${clientproxy.email.url}"/>
    </bean>

    <!-- cache -->
    <bean id="orderCacheManagerFactory" class="org.springframework.cache.ehcache.EhCacheManagerFactoryBean">
        <property name="configLocation">
            <value>ehcache/order_ehcache.xml</value>
        </property>
    </bean>
    <bean id="orderCacheManager" class="org.springframework.cache.ehcache.EhCacheCacheManager">
        <property name="cacheManager" ref="orderCacheManagerFactory"/>
    </bean>
    <bean id="cachedCatalogFacade" class="com.junbo.order.clientproxy.catalog.impl.CachedCatalogFacadeImpl">
        <constructor-arg name="ehCacheCacheManager" ref="orderCacheManager"/>
    </bean>

</beans>