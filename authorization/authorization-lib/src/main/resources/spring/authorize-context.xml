<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="tokenEndpoint" class="com.junbo.oauth.spec.endpoint.proxy.TokenEndpointClientProxy">
        <constructor-arg name="client" ref="commonAsyncHttpClient"/>
        <constructor-arg name="pathParamTranscoder" ref="commonPathParamTranscoder"/>
        <constructor-arg name="queryParamTranscoder" ref="commonQueryParamTranscoder"/>
        <constructor-arg name="transcoder" ref="commonTranscoder"/>
        <constructor-arg name="target" value="${authorize.oauth.endpoint}"/>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="tokenInfoEndpoint" class="com.junbo.oauth.spec.endpoint.proxy.TokenInfoEndpointClientProxy">
        <constructor-arg name="client" ref="commonAsyncHttpClient"/>
        <constructor-arg name="pathParamTranscoder" ref="commonPathParamTranscoder"/>
        <constructor-arg name="queryParamTranscoder" ref="commonQueryParamTranscoder"/>
        <constructor-arg name="transcoder" ref="commonTranscoder"/>
        <constructor-arg name="target" value="${authorize.oauth.endpoint}"/>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="apiEndpoint" class="com.junbo.oauth.spec.endpoint.proxy.ApiEndpointClientProxy">
        <constructor-arg name="client" ref="commonAsyncHttpClient"/>
        <constructor-arg name="pathParamTranscoder" ref="commonPathParamTranscoder"/>
        <constructor-arg name="queryParamTranscoder" ref="commonQueryParamTranscoder"/>
        <constructor-arg name="transcoder" ref="commonTranscoder"/>
        <constructor-arg name="target" value="${authorize.oauth.endpoint}"/>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="tokenInfoParser" class="com.junbo.authorization.token.TokenInfoParserImpl">
        <property name="tokenInfoEndpoint" ref="tokenInfoEndpoint"/>
        <property name="useDummyTokenInfo" value="true"/>

    </bean>

    <bean id="spelConditionEvaluator" class="com.junbo.authorization.service.impl.SPELConditionEvaluator"/>

    <bean id="authorizeService" class="com.junbo.authorization.service.impl.AuthorizeServiceImpl">
        <property name="apiEndpoint" ref="apiEndpoint"/>
        <property name="tokenInfoParser" ref="tokenInfoParser"/>
        <property name="conditionEvaluators">
            <list>
                <ref bean="spelConditionEvaluator"/>
            </list>
        </property>
        <property name="useDummyRights" value="true"/>
    </bean>
</beans>