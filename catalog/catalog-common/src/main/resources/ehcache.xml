<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">

    <defaultCache
            maxElementsInMemory="10000"
            maxElementsOnDisk="0"
            eternal="false"
            timeToIdleSeconds="0"
            timeToLiveSeconds="3600"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"/>

    <cache name="ITEM"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="ITEM_REVISION"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="ITEM_CONTROL"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="300"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="OFFER"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="OFFER_REVISION"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="604800"
           memoryStoreEvictionPolicy="LRU"/>

    <cache name="OFFER_CONTROL"
           maxElementsInMemory="100000"
           eternal="false"
           overflowToDisk="false"
           diskPersistent="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="300"
           memoryStoreEvictionPolicy="LRU"/>


</ehcache>
