<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="classpath*:spring/common-lib-context.xml"/>

    <context:component-scan base-package="com.junbo.billing.core.service"/>
    <context:component-scan base-package="com.junbo.billing.spec.resource.adapter" />

    <bean id="defaultBalanceResource" class="com.junbo.billing.rest.resource.BalanceResourceImpl"/>
    <bean id="defaultBillingCurrencyResource" class="com.junbo.billing.rest.resource.BillingCurrencyResourceImpl"/>

    <bean id="defaultBalanceResourceClientFactory" class="com.junbo.billing.spec.resource.proxy.BalanceResourceClientProxyFactory"/>
    <bean id="defaultBillingCurrencyResourceClientFactory" class="com.junbo.billing.spec.resource.proxy.BillingCurrencyResourceClientProxyFactory"/>

    <alias alias="defaultBalanceResourceRouter" name="commonRouter" />
    <alias alias="defaultBillingCurrencyResourceRouter" name="commonRouter" />
</beans>