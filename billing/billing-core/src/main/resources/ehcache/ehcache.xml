<?xml version="1.0" encoding="UTF-8"?>

<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="true" monitoring="autodetect" dynamicConfig="true" name="billingCacheManager">

    <diskStore path="java.io.tmpdir"/>

    <cache name="CURRENCY"
           maxElementsInMemory="2000"
           maxElementsOnDisk="0"
           overflowToDisk="false"
           memoryStoreEvictionPolicy="LRU"
           eternal="false"
           timeToLiveSeconds="18000"
           timeToIdleSeconds="1800"/>

    <defaultCache
            maxElementsInMemory="5000"
            maxElementsOnDisk="0"
            overflowToDisk="false"
            memoryStoreEvictionPolicy="LRU"
            eternal="false"
            timeToLiveSeconds="900"
            timeToIdleSeconds="0"/>

</ehcache>
