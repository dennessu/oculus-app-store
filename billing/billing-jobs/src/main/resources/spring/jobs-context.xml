<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.junbo.billing.db.*"/>

    <bean id="billingBalanceClient" class="com.junbo.billing.spec.resource.proxy.BalanceResourceClientProxy">
        <constructor-arg name="client" ref="commonAsyncHttpClient"/>
        <constructor-arg name="transcoder" ref="commonTranscoder"/>
        <constructor-arg name="pathParamTranscoder" ref="commonPathParamTranscoder"/>
        <constructor-arg name="queryParamTranscoder" ref="commonQueryParamTranscoder"/>
        <constructor-arg name="target" value="${clientproxy.billing.url}"/>
        <constructor-arg name="exceptionHandler" ref="commonExceptionHandler"/>
    </bean>

    <bean id="billingBillingFacade" class="com.junbo.billing.jobs.BillingFacadeImpl" />

    <bean id="asyncChargeListener" class="com.junbo.billing.jobs.asyncCharge.AsyncChargeListener" />

    <bean id="billingListenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="destination" ref="billingAsyncChargeQueue" />
        <property name="messageListener" ref="asyncChargeListener" />
    </bean>
</beans>